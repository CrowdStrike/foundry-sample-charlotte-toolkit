{
  "name": "charlotte-toolkit-ui",
  "version": "1.2.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "dependencies": {
    "@crowdstrike/falcon-shoelace": "0.4.0",
    "@crowdstrike/foundry-js": "0.19.0",
    "@shoelace-style/shoelace": "2.20.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "10.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.7.2",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "fs-extra": "11.3.2",
    "jsdom": "^27.0.0",
    "typescript": "5.9.3",
    "vite": "^7.1.12",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "clean": "node scripts/build-utils.js clean",
    "prebuild": "npm run clean",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:analyze": "vite build --mode production",
    "watch": "vite build --watch --mode development",
    "dev": "vite",
    "preview": "vite preview",
    "size-check": "npm run build && node scripts/build-utils.js size-check",
    "validate-build": "node scripts/build-utils.js validate",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "format": "biome format --write ./src",
    "format:check": "biome format ./src",
    "security": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "quality": "npm run lint && npm run format:check && npm run security && npm run type-check",
    "quality:fix": "npm run lint:fix && npm run format && npm run security:fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all",
      "not ie 11",
      "not android <= 4.4"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "overrides": {
    "stable": "0.1.8",
    "svgo": "3.3.2",
    "esbuild": "0.25.10",
    "rollup": "4.50.2"
  }
}
