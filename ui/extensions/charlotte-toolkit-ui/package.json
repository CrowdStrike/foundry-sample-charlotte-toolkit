{
  "name": "charlotte-toolkit-ui",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "dependencies": {
    "@crowdstrike/falcon-shoelace": "0.4.0",
    "@crowdstrike/foundry-js": "0.19.0",
    "@shoelace-style/shoelace": "2.20.1",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-markdown": "10.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react": "5.0.4",
    "fs-extra": "11.3.1",
    "knip": "^5.63.1",
    "typescript": "5.9.3",
    "vite": "7.1.10"
  },
  "scripts": {
    "clean": "node scripts/build-utils.js clean",
    "prebuild": "npm run clean",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "dev": "vite dev",
    "preview": "vite preview",
    "size-check": "npm run build && node scripts/build-utils.js size-check",
    "validate-build": "node scripts/build-utils.js validate",
    "lint": "biome lint ./src",
    "lint:fix": "biome check --write ./src",
    "lint:all": "npm run lint && npm run type-check",
    "format": "biome format --write ./src",
    "format:check": "biome format ./src",
    "check": "biome check ./src",
    "security": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "quality": "npm run lint:all && npm run format:check && npm run security",
    "quality:fix": "npm run lint:fix && npm run format && npm run security:fix",
    "type-check": "tsc --noEmit"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all",
      "not ie 11",
      "not android <= 4.4"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "overrides": {
    "stable": "0.1.8",
    "svgo": "3.3.2",
    "esbuild": "0.25.10",
    "@esbuild/darwin-arm64": "0.25.10"
  }
}
