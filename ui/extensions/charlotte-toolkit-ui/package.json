{
  "name": "charlotte-toolkit-ui",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "dependencies": {
    "@crowdstrike/falcon-shoelace": "^0.4.0",
    "@crowdstrike/foundry-js": "^0.19.0",
    "@shoelace-style/shoelace": "^2.20.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.34.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-image": "^3.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@web/rollup-plugin-html": "^2.3.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-yml": "^1.18.0",
    "fs-extra": "^11.3.1",
    "globals": "^16.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.2",
    "jest-environment-jsdom": "^30.1.2",
    "postcss": "^8.4.49",
    "prettier": "^3.6.2",
    "rollup": "^4.50.0",
    "rollup-plugin-brotli": "^3.1.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "yaml-eslint-parser": "^1.3.0"
  },
  "scripts": {
    "clean": "node scripts/build-utils.js clean",
    "prebuild": "npm run clean",
    "build": "rollup -c rollup.config.js --environment BUILD:production",
    "build:dev": "rollup -c rollup.config.js --environment BUILD:development",
    "build:analyze": "rollup -c rollup.config.js --environment BUILD:production,ANALYZE:true",
    "watch": "rollup -c rollup.config.js --watch --environment BUILD:development",
    "dev": "npm run watch",
    "size-check": "npm run build && node scripts/build-utils.js size-check",
    "validate-build": "node scripts/build-utils.js validate",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --max-warnings 0",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:yaml": "cd ../../.. && npx eslint \"*.yml\" \"workflows/*.yml\" --config ui/extensions/charlotte-toolkit-ui/eslint.config.js --parser yaml-eslint-parser",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "lint:all": "npm run lint && npm run lint:yaml && npm run type-check",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,json,md}\"",
    "format:staged": "prettier --write --cache",
    "security": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "deps:check": "depcheck",
    "deps:unused": "depcheck --ignores=\"@types/*,eslint-*,@typescript-eslint/*,@rollup/*\"",
    "test": "node --max-old-space-size=4096 --expose-gc ./node_modules/.bin/jest --watchAll=false",
    "test:watch": "node --max-old-space-size=4096 --expose-gc ./node_modules/.bin/jest --watch",
    "test:coverage": "node --max-old-space-size=4096 --expose-gc ./node_modules/.bin/jest --coverage --watchAll=false",
    "test:ci": "node --max-old-space-size=4096 --expose-gc ./node_modules/.bin/jest --ci --coverage --watchAll=false",
    "quality": "npm run lint:all && npm run format:check && npm run security && npm run deps:check",
    "quality:fix": "npm run lint:fix && npm run format && npm run security:fix",
    "type-check": "tsc --noEmit"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all",
      "not ie 11",
      "not android <= 4.4"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "overrides": {
    "stable": "0.1.8",
    "svgo": "^3.3.2"
  }
}
